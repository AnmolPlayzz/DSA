{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run active C++ (stdin from input.txt, stdout to output.txt)",
      "type": "cppdbg",
      "request": "launch",
      "program": "/bin/bash",
      "args": [
        "-lc",
        "\"${fileDirname}/${fileBasenameNoExtension}.out\" < \"${workspaceFolder}/input.txt\" > \"${workspaceFolder}/output.txt\""
      ],
      "preLaunchTask": "build active file (C++)",
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "externalConsole": false,
      "linux": {
        "MIMode": "gdb",
        "miDebuggerPath": "/usr/bin/gdb"
      },
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ],
      "environment": []
    }
  ],
  "compounds": [
    {
      "name": "Build and Run with redirection",
      "configurations": ["Run active C++ (stdin from input.txt, stdout to output.txt)"]
    }
  ]
}
